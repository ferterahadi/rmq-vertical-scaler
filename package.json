{
  "name": "rmq-vertical-scaler",
  "version": "1.0.0",
  "description": "Automatically scale RabbitMQ cluster resources (CPU/Memory) based on queue metrics and message rates in Kubernetes",
  "main": "lib/index.js",
  "type": "module",
  "bin": {
    "rmq-vertical-scaler": "./bin/rmq-vertical-scaler"
  },
  "scripts": {
    "start": "node bin/rmq-vertical-scaler",
    "dev": "node --watch bin/rmq-vertical-scaler",
    "test": "node --test tests/**/*.test.js",
    "test:watch": "node --test --watch tests/**/*.test.js",
    "lint": "eslint lib bin tests scripts",
    "lint:fix": "eslint lib bin tests scripts --fix",
    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "build:docker": "./scripts/build.sh",
    "docker:build": "docker build -t rmq-vertical-scaler .",
    "docker:run": "docker run --rm rmq-vertical-scaler",
    "docker:push": "PUSH=true ./scripts/build.sh",
    "docs:build": "jsdoc -c jsdoc.conf.json",
    "clean": "rm -rf dist/ node_modules/.cache",
    "preversion": "npm test && npm run lint",
    "version": "npm run build && git add -A",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "rabbitmq",
    "kubernetes",
    "autoscaling",
    "vertical-scaling",
    "queue-metrics",
    "k8s",
    "rabbitmq-cluster",
    "resource-management",
    "monitoring",
    "devops"
  ],
  "author": {
    "name": "RMQ Vertical Scaler Team",
    "email": "support@rmq-vertical-scaler.dev",
    "url": "https://github.com/yourusername/rmq-vertical-scaler"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/rmq-vertical-scaler.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/rmq-vertical-scaler/issues"
  },
  "homepage": "https://github.com/yourusername/rmq-vertical-scaler#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@kubernetes/client-node": "^1.3.0",
    "axios": "^1.6.0",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.4.0",
    "eslint-plugin-promise": "^6.1.1",
    "jsdoc": "^4.0.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.9",
    "utf-8-validate": "^6.0.5"
  },
  "files": [
    "lib/",
    "bin/",
    "docs/",
    "examples/",
    "scripts/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}